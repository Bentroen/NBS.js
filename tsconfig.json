{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "target": "ES6",
        "lib": ["ES6"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowJs": true,
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "listFiles": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "src/app.ts"
    ]
}
