{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["ES6"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "isolatedModules": true,
        "rootDir": "src",
        "outDir": "build",
        "declaration": true,
        "paths": {
            "tslib": ["./node_modules/tslib/tslib.d.ts"]
        }
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "src/app.ts"
    ]
}
