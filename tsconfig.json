{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowJs": true,
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "listFiles": true
    },
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "out": ".github/tuottaa/private/docs",
        "githubPages": false,
        "validation": {
            "invalidLink": true
        },
        "readme": "none",
        "name": "NBS.js",
        "includeVersion": true,
        "sort": ["static-first", "visibility"]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ]
}
