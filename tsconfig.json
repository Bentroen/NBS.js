{
	"compilerOptions": {
		"outDir": "build",
		"target": "ES2021",
		"lib": ["ES2021"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"isolatedModules": true,
		"allowJs": true,
		"declaration": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"listFiles": true
	},
	"typedocOptions": {
		"plugin": ["typedoc-material-theme", "typedoc-plugin-mdn-links"],
		"entryPoints": ["src/index.ts"],
		"out": "public/docs",
		"githubPages": true,
		"validation": {
			"invalidLink": true
		},
		"readme": "none",
		"name": "NBS.js",
		"includeVersion": true,
		"themeColor": "#c6a0f6",
		"sort": ["static-first", "visibility"]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "tests", "build", "dist"]
}
